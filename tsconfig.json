{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["apps/api/*"],
      "@website/*": ["apps/website/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "apps/**/*",   // Match all files recursively in apps/
    "types.d.ts"   // Include global type declarations
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
